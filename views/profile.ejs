    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    </head>
    <body>
        <div class="w-full  bg-[#2C2638] text-white p-5 ">
            <div class="flex justify-end  w-full">

            <a class="bg-red-500   px-3 py-2 rounded-md text-sm " href="/logout">Logout</a>
            </div>

            <div class="flex w-full  gap-10">
                
                    <div class="w-1/2 text-center  ">
                        <div class="w-full flex justify-center">
                            <div class="w-40 h-40 rounded-md ">
                                <img class="w-full overflow-hidden h-full rounded-[50%] object-cover" src="/imgaes/uploads/<%=user.profilepic%>.jpg" alt="">
                            </div>
                        </div>

                        <h3 class="text-3xl mb-4 mt-3 "><span class="text-4xl text-rose-500">Welcome</span> <%= user.name %></h3>
                        
                        <a class="w-40  ml-[18vw] rounded-md text-sm px-3 py-2 block bg-blue-500" href="/profile/upload">Upload new pic</a>
                        

                    </div>
                

                <div class="w-2/5 border-1 bg-white  rounded-xl  mt-[7vh]">
                    <h5 class="mt-4 text-black text-xl">You can create new Post Here .</h5>
                    <form class="mt-4" action="/post" method="post">
                        <textarea name="content" class="resize-none bg-[#3C364C] outline-none p-3 rounded-md shadow-xl  border-2 border-zinc-800 w-2/3 h-30" placeholder="what's on your mind"></textarea>
                        <input type="submit"  value="Create new Post" class="mt-8 w-40 rounded-md ml-2 text-sm px-3 py-2 block bg-blue-500">
                    </form>
                </div>
            </div>

            <div class="posts mt-20">
                <h3 class="text-white text-semibold text-xl">Your Posts</h3>
                <div class="postcontainer flex flex-wrap mt-2 gap-4">
                <%if(user.posts.length>0) { %>
                    <% user.posts.forEach((e) => { %>   <!-- har bar e me ek post aa raha hai -->

                    
                        <div class="post w-1/3 p-4 mb-4 rounded-md border-2 bg-[#3C364C]">
                                <h4 class="text-blue-500 mb-2">@<%=user.username%></h4>
                                <p class="text-sm tracking-tight"><%=e.content%></p>
                                <small class="mt-4 block"><%=e.likes.length%></small>
                                <div class="btns flex gap-4 ">
                                    <a class="text-blue-500" href="/like/<%=e._id%>">
                                        <%= e.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"%>
                                    </a>
                                    <a class="text-zinc-600" href="/edit/<%= e._id%>">Edit</a>
                                </div>
                        </div> 
                            
                        <%})%>
                        <% } else { %>
                            <h3>No Posts to Show.</h3>
                            <% }%>
                        </div>
            


            </div>


        </div>
    </body>
    </html>